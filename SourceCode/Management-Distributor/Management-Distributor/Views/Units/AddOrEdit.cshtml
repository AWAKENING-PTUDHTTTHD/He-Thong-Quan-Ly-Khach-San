@model Distributor.POCO.Unit
@{
                /**/

                Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Unit", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.UnitId)
    <div class="form-group">
        @Html.LabelFor(model => model.UnitName, new { @class = "control-label" })
        @Html.EditorFor(model => model.UnitName, new { htmlAtribute = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.UnitName)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NumbProduct, new { @class = "control-label" })
        @Html.EditorFor(model => model.NumbProduct, new { htmlAtribute = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NumbProduct)
    </div>
    <div>
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>

}

