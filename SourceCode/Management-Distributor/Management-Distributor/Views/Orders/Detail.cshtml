@model Tuple<Distributor.POCO._Distributor, Distributor.POCO.Order, List<Distributor.POCO.OrderDetail>>

<header style="margin-top: 0;" class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Order Detail Info</h2>
    </div>
</header>
<section style="padding: 10px 0;" class="tables">
    <div class="container-fluid">
        <div class="row">
            <div class="md-4">
                <h3>@Model.Item1.DistributorName</h3>
                <address>
                    @Model.Item1.DistributorAddress
                </address>
                <p>@Model.Item1.DistributorPhoneNumber</p>

            </div>
            <div class="md-4">
                <h3>Order Info</h3>
                <p><strong>Create at</strong>: @Model.Item2.OrderDate</p>
                <p><strong>Required Delivery Date</strong>:@Model.Item2.RequireDeliveryDate</p>
                <h4>@Model.Item2.ToTalAmount</h4>
                <p>@Html.ActionLink("Export PDF", "PrintInvoice", "Reports", new { id = Model.Item2.OrderId}, null)</p>
            </div>
            <div class="md-4">
                <h3>Employee Info</h3>
                <p><strong>Employee Name</strong>: @ViewBag.EmpInfoName</p>
                <p><strong>ID</strong>: @ViewBag.EmpInfoId</p>

            </div>
        </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <h3>Order Details</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover text-center">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>OrderID</th>
                                    <th>Price</th>
                                    <th>DemandQuantity</th>
                                    <th>ActualQuantity</th>
                                    <th>ToTalAmount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var od in Model.Item3)
                                {

                                    RenderPartialExtensions.RenderPartial(Html, "_OrderDetail", od);

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>