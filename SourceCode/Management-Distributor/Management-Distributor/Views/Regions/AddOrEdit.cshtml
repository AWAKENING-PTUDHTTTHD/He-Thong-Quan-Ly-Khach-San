
@{
    Layout = null;
}

@model Distributor.POCO.Region

@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Regions", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.RegionId)

    <div class="form-group">
        @Html.LabelFor(model => model.RegionName, new { @class = "control-label" })
        @Html.EditorFor(model => model.RegionName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.RegionName)
    </div>
    <div class="pull-right">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
       
}
