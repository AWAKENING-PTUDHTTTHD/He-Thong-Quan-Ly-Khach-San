@model Distributor.POCO.Product

<style>
    .product-Image {
        height: 100px;
        width: 100px;
    }
</style>

<tr>
    <td><img class="product-Image" src="@Url.Content(Model.ImageUrl)" alt="not found"></td>
    <td>@Html.DisplayFor(ModelItem => Model.ProductName)</td>
    <td>@Html.DisplayFor(ModelItem => Model.CategoryId)</td>
    <td >@Html.DisplayFor(ModelItem => Model.Price)</td>

    <td>

        <a class='btn btn-success btn-sm' onclick=PopupForm('@Url.Action("AddOrEdit","Products")/@Model.ProductId')><i class='fa fa-pencil-square-o' aria-hidden='true'></i></a>
        <a class='btn btn-danger btn-sm' onclick=Delete('@Model.ProductId')><i class='fa fa-trash' aria-hidden='true'></i></a>
    </td>
</tr>
